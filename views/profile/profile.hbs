<div class="row mt-4">  
    <div class="col-md-4">  
        <div class="card">  
            <div class="card-body text-center">  
                <i class="bi bi-person-circle" style="font-size: 5rem; color: #3A7CC4"></i>  
                <h3 class="card-title mt-3">{{profile.pen_name}}</h3>  
                <p class="text-muted">@{{profile.username}}</p>  
                <div class="mt-3">  
                    <p><i class="bi bi-person-badge"></i> {{profile.fullname}}</p>  
                    <p><i class="bi bi-envelope"></i> {{profile.email}}</p>  
                    <p><i class="bi bi-calendar3"></i> Joined {{formatDate profile.created_at}}</p>
                </div>  
            </div>  
        </div>  
    </div>  
    
    <div class="col-md-8">  
        <div class="card">  
            <div class="card-body">  
                <h4 class="card-title mb-4">  
                    <i class="bi bi-newspaper"></i> Articles  
                    {{#if articles}}  
                        <span class="badge badge-primary">{{articles.length}}</span>  
                    {{/if}}  
                </h4>  

                {{#if articles.length}}  
                    {{authUser.username}}
                    <div class="list-group">  
                        {{#each articles}}  
                            <a href="/articles?id={{this.id}}" class="list-group-item list-group-item-action">  
                                <div class="d-flex w-100 justify-content-between">  
                                    <h5 class="mb-1">{{this.title}}</h5>  
                                </div>  
                            </a>  
                        {{/each}}  
                    </div>  
                {{else}}  
                    <div class="text-center text-muted py-5">  
                        <i class="bi bi-journal-x" style="font-size: 3rem;"></i>  
                        <p class="mt-3">No articles published yet</p>  
                    </div>  
                {{/if}}  
            </div>  
        </div>  
    </div>  
</div>