<div class="homepage container-fluid mt-4 p-4">
    <div class="row">
        <!-- Featured Articles Section -->
        <div class="col-md-8">
            <h2 class="section-title">Bài viết nổi bật tuần qua</h2>
            <!-- Featured Article -->
            <div class="featured-article-card mb-4">
                <div class="row no-gutters">
                    <div class="col-md-6">
                        <a href="/articles?id={{featuredPosts.[0].id}}">
                            <img src="{{featuredPosts.[0].thumbnail}}" class="news-card-img-large"
                                alt="{{featuredPosts.[0].title}}">
                        </a>
                    </div>
                    <div class="col-md-6 position-relative">
                        <div class="card-body">
                            <a href="/category/{{featuredPosts.[0].category_id}}"
                                class="text-dark text-decoration-none mb-2">
                                <span class="news-card-category">{{featuredPosts.[0].category}}</span>
                            </a>
                            <a href="/articles?id={{featuredPosts.[0].id}}" class="text-dark text-decoration-none">
                                <h5 class="news-card-title mt-2">
                                    {{#if featuredPosts.[0].is_premium}}
                                    <i class="bi bi-gem" style="color: #bb29bb;"></i>
                                    {{/if}}
                                    {{featuredPosts.[0].title}}
                                </h5>
                            </a>
                        </div>
                        <p class="news-card-text date-position"><small class="text-muted">{{formatDate
                                featuredPosts.[0].published_at}}</small></p>
                    </div>
                </div>
            </div>

            <!-- Highlighted Articles -->
            <div class="row">
                {{#each featuredPosts}}
                {{#unless @first}}
                <div class="col-md-4 mb-4">
                    <div class="custom-card position-relative">
                        <a href="/articles?id={{this.id}}">
                            <img src="{{this.thumbnail}}" class="news-card-img-top-fixed" alt="{{this.title}}">
                        </a>
                        <div class="card-body">
                            <a href="/category/{{this.category_id}}" class="text-decoration-none">
                                <span class="news-card-category">{{this.category}}</span>
                            </a>
                            <a href="/articles?id={{this.id}}" class="text-dark text-decoration-none">
                                <h6 class="news-card-title-three-lines mt-2">
                                    {{#if this.is_premium}}
                                    <i class="bi bi-gem" style="color: #bb29bb;"></i>
                                    {{/if}}
                                    {{limitCharacters this.title 100}}
                                </h6>
                            </a>
                        </div>
                        <p class="news-card-text date-position"><small class="text-muted">{{formatDate
                                this.published_at}}</small></p>
                    </div>
                </div>
                {{/unless}}
                {{/each}}
            </div>

            <hr>
            <h2 class="section-title">Top chuyên mục</h2>
            <div class="row">
                {{#each topCategories}}
                <div class="col-md-6 mb-4">
                    <div class="custom-card position-relative top-category-card">
                        <div class="card-header bg-primary">
                            <a href="/category/{{this.category_id}}" class="news-card-category text-decoration-none">
                                <h5 class="mb-0">{{this.category}}</h5>
                            </a>
                        </div>
                        <div class="card-body p-0">
                            <a href="/articles?id={{this.latestPost.id}}">
                                <img src="{{this.latestPost.thumbnail}}" class="img-fluid news-card-img-top-fixed"
                                    alt="{{this.latestPost.title}}">
                            </a>
                            <div class="card-body p-4">
                                <a href="/articles?id={{this.latestPost.id}}" class="text-dark text-decoration-none">
                                    <h6 class="news-card-title">
                                        {{#if this.latestPost.is_premium}}
                                        <i class="bi bi-gem" style="color: #bb29bb;"></i>
                                        {{/if}}
                                        {{this.latestPost.title}}
                                    </h6>
                                </a>
                                <p class="news-card-text date-position"><small class="text-muted">{{formatDate
                                        this.latestPost.published_at}}</small></p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>

        <!-- Sidebar Section -->
        <div class="col-md-4 bg-light">
            <div class="sidebar">
                <!-- Tabs -->
                <ul class="nav nav-tabs  custom-nav-tab mb-3" id="newsTabs" role="tablist">
                    <li class="nav-item">
                        <a class="nav-link active" id="latest-tab" data-bs-toggle="tab" href="#latest" role="tab"
                            aria-controls="latest" aria-selected="true">Tin mới</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" id="popular-tab" data-bs-toggle="tab" href="#popular" role="tab"
                            aria-controls="popular" aria-selected="false">Đọc nhiều</a>
                    </li>
                </ul>

                <div class="tab-content" id="newsTabsContent">
                    <div class="tab-pane fade show active" id="latest" role="tabpanel" aria-labelledby="latest-tab">
                        <ul class="list-unstyled">
                            {{#each latestPosts}}
                            <li class="media mb-3">
                                <div class="latest-popular-card">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <a href="/articles?id={{this.id}}">
                                                <img src="{{this.thumbnail}}" class="img-fluid" alt="{{this.title}}"
                                                    style="width: 100%; height: 120px; border-radius: 8px;">
                                            </a>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body p-3">
                                                <a href="/category/{{this.category_id}}"
                                                    class=" text-dark text-decoration-none">
                                                    <span class="news-card-category">{{this.category}}</span>
                                                </a>
                                                <a href="/articles?id={{this.id}}"
                                                    class="text-dark text-decoration-none">
                                                    <h6 class="news-card-title-small mt-1">
                                                        {{#if this.is_premium}}
                                                        <i class="bi bi-gem" style="color: #bb29bb;"></i>
                                                        {{/if}}
                                                        {{limitCharacters this.title 45}}
                                                    </h6>
                                                </a>
                                                <p class="news-card-text date-position"><small
                                                        class="text-muted">{{formatDate this.published_at}}</small></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>

                    <div class="tab-pane fade" id="popular" role="tabpanel" aria-labelledby="popular-tab">
                        <ul class="list-unstyled">
                            {{#each mostViewedPosts}}
                            <li class="media mb-3">
                                <div class="latest-popular-card">
                                    <div class="row no-gutters">
                                        <div class="col-md-4">
                                            <a href="/articles?id={{this.id}}">
                                                <img src="{{this.thumbnail}}" class="img-fluid rounded"
                                                    alt="{{this.title}}"
                                                    style="width: 100%; height: 120px;object-fit: cover;">
                                            </a>
                                        </div>
                                        <div class="col-md-8">
                                            <div class="card-body p-3">
                                                <a href="/category/{{this.category_id}}"
                                                    class="text-dark text-decoration-none">
                                                    <span class="news-card-category">{{this.category}}</span>
                                                </a>
                                                <a href="/articles?id={{this.id}}" class="text-dark">
                                                    <h6 class="news-card-title-small mt-1">
                                                        {{#if this.is_premium}}
                                                        <i class="bi bi-gem" style="color: #bb29bb;"></i>
                                                        {{/if}}
                                                        {{limitCharacters this.title 45}}
                                                    </h6>
                                                </a>
                                                <p class="news-card-text date-position"><small
                                                        class="text-muted">{{formatDate this.published_at}}</small></p>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </li>
                            {{/each}}
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        var triggerTabList = [].slice.call(document.querySelectorAll('#newsTabs a'))
        triggerTabList.forEach(function (triggerEl) {
            var tabTrigger = new bootstrap.Tab(triggerEl)

            triggerEl.addEventListener('click', function (event) {
                event.preventDefault()
                tabTrigger.show()
            })
        })
    })
</script>